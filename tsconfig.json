{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2022"],
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
  },
  "exclude": ["node_modules"]
}
